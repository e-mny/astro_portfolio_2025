---
interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
  tags: string[];
}

const { title, description, pubDate, url, tags } = Astro.props;

const fullDate = pubDate.toLocaleDateString("en", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

---

<li
  class="dark:text-zinc-400 text-zinc-500 gap-1 p-6 border dark:border-zinc-700/60 rounded-lg flex flex-col bg-opacity-40 dark:bg-opacity-40 bg-zinc-50 dark:bg-[#1e1e1e] group transition-all duration-300 relative hover:shadow-[0_0_20px_rgba(255,255,255,0.8)]"
>
  <div class="flex flex-col gap-2">
    <div class="flex justify-between">
      <div class="flex flex-col sm:flex-row sm:items-baseline gap-2">
        <a href={url}>

          <h1
          class="text-lg font-medium dark:text-white text-zinc-700 [word-break:break-word] bg-gradient-to-r rounded-md from-green-200 to-green-100 dark:from-beige dark:to-blush bg-[length:0px_5px] bg-left-bottom bg-no-repeat transition-[background-size] duration-500 hover:bg-[length:100%_3px]"
          >
          {title}
        </h1>
      </a>
      </div>
      <time
        datetime={pubDate.toISOString()}
      class="block text-sm tracking-wide dark:text-zinc-400 text-zinc-600"
      >{fullDate}
    </time>

    </div>
    <p class="text-sm leading-relaxed dark:text-charcoalGray text-zinc-600 mt-2">
      {description}
    </p>
    <div class="flex flex-wrap gap-2 mt-2 text-zinc-600 text-center">
      <p class="text-sm dark:text-charcoalGray text-zinc-600 text-center mt-1">
        Tags:
      </p>
      <ul class="flex flex-wrap gap-2">
        {tags.map((tag) => (
          <li class="dark:bg-zinc-700 bg-zinc-100 text-zinc-600 dark:text-zinc-300 rounded-md px-2 py-1 text-sm capitliz">
            {tag}
          </li>
        ))}
      </ul>
    </div>
  </a>
</li>
