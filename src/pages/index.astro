---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import authorImage from "../assets/photos/hero_img.jpg";
import singaporeFlag from "../assets/flag-for-singapore.svg";
import { author } from "@data/socials";
---

<AppLayout title="Home">
  <header
    class="py-4 align-middle sm:grid grid-cols-2 items-center justify-between gap-4 md:h-min md:flex md:flex-1 md:gap-8"
  >
    <div
      class="flex w-72 h-96 md:w-80 mx-auto md:ml-4 rounded-md overflow-hidden items-center justify-center drop-shadow-none hover:md:drop-shadow-[0px_0px_5px_rgba(255,255,255,0.90)] transition-all ease-in-out duration-300"
    >
      <Image
        src={authorImage}
        alt="Image of Me"
        width={3000}
        height={3000}
        class="transition-transform duration-300 ease-in-out transform hover:scale-105 hover:shadow-2xl rounded-md w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg xl:max-w-xl object-cover h-full"
      />
    </div>
    <div class="mt-8 max-w-lg 2xl:max-w-xl sm:my-0 sm:order-last">
      <h1
        class="mb-2 text-6xl font-dancing font-bold tracking-tight dark:text-white text-zinc-900"
      >
        {author}
      </h1>
      <p class="mb-4 dark:text-lightGray text-zinc-700">
        Developer
        <span class="text-lg">|</span>
         Sportsman
        <span class="text-lg">|</span>
         Musician from Singapore
        <Image
          src={singaporeFlag}
          alt="Singapore Flag"
          height={25}
          width={25}
          class="inline"
        />
      </p>
      <div
        class="max-w-prose font-normal text-sm md:text-base dark:text-charcoalGray text-zinc-600 sm:max-w-sm md:max-w-xl leading-relaxed italic"
      >
        <p>
          Like an athlete, training relentlessly and honing skills in data
          analysis and development to stay at the top.
        </p>
        <!-- Blank line -->
        <p>&#8203;</p>
        <p>
          Like a composer, crafting innovative solutions that harmonizes with
          user needs and business objectives.
        </p>
      </div>
    </div>
  </header>
</AppLayout>
