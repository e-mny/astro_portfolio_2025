const description = "Here are some of the projects I have worked on, including ones I have contributed to, authored, or maintained.";

---

<AppLayout title="Projects" 
           tags={["projects", "portfolio", "github", "enoch mok", "developer", "software engineer"]}
           description={description}>
  <Header title="My Projects" />
  <p
    class="max-w-prose mb-10 font-normal dark:text-zinc-400 text-zinc-600 leading-relaxed"
  >
    {description}
  </p>
  <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-8">
    {
      projects.map((project, index) => (
        index < 2 ? (
          <ProjectCard
            name={project.name}
            description={project.description}
            stars={project.stars}
            role={project.role}
            url={project.url}
            languages={project.languages}
            addClass="lg:col-span-3"
          />
        ) : (
          <ProjectCard
            name={project.name}
            description={project.description}
            stars={project.stars}
            role={project.role}
            url={project.url}
            languages={project.languages}
            addClass="lg:col-span-2"
          />
        )
      ))
    }
  </ul>
</AppLayout>
